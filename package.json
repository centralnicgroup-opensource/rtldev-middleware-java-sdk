{
    "name": "java-sdk",
    "description": "JAVA SDK for the insanely fast HEXONET API",
    "version": "0.0.0-development",
    "private": true,
    "author": {
        "name": "Kai Schwarz",
        "email": "kschwarz@hexonet.net"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8.3.0"
    },
    "homepage": "https://github.com/hexonet/java-sdk",
    "repository": "github:hexonet/java-sdk",
    "bugs": "https://github.com/hexonet/java-sdk/issues",
    "maintainers": [
        {
            "name": "Kai Schwarz",
            "email": "kschwarz@hexonet.net"
        }
    ],
    "keywords": [
        "hexonet",
        "domain",
        "api",
        "connector",
        "isp",
        "ispapi",
        "ssl",
        "cert",
        "dns",
        "backorder",
        "premium",
        "preregistration",
        "registration",
        "application"
    ],
    "devDependencies": {
        "@conveyal/maven-semantic-release": "4.3.0",
        "@semantic-release/changelog": "3.0.4",
        "@semantic-release/commit-analyzer": "6.2.0",
        "@semantic-release/exec": "3.3.3",
        "@semantic-release/git": "7.0.15",
        "@semantic-release/github": "5.4.0",
        "conventional-changelog": "3.1.8",
        "semantic-release": "^15.13.16"
    },
    "release": {
        "debug": false,
        "analyzeCommits": {
            "preset": "angular"
        },
        "generateNotes": {
            "preset": "angular"
        },
        "verifyConditions": [
            "@semantic-release/changelog",
            "@semantic-release/git",
            "@semantic-release/github"
        ],
        "verifyRelease": [
            "@conveyal/maven-semantic-release"
        ],
        "prepare": [
            "@conveyal/maven-semantic-release",
            {
                "path": "@semantic-release/changelog",
                "changelogFile": "HISTORY.md"
            },
            {
                "path": "@semantic-release/git",
                "assets": [
                    "HISTORY.md",
                    "package.json",
                    "package-lock.json",
                    "pom.xml",
                    "target/apidocs",
                    "target/site"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        "publish": [
            "@semantic-release/github",
            "@conveyal/maven-semantic-release"
        ]
    },
    "scripts": {
        "semantic-release": "semantic-release"
    }
}
